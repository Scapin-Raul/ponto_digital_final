@{
    Layout = "_AdminLayout";
}
@model ponto_digital_final.ViewModels.AdminViewModel;



<section id="content">
    <h3>Página de Administração - Gerenciamento de Usuários</h3>

    @if (@Model.listaDeUsuarios.Count == 0)
    {
        <p>Não há usuários Registrados.</p>
    }

        <div id="cadastros">
                <h4>Usuários cadastrados:</h4>

                <div id="usuarios">
                @for (int i = 0; i < @Model.listaDeUsuarios.Count; i++)
                {
                    @if (!@Model.listaDeUsuarios[i].Admin)
                    {
                        <div class="usuarios">
                            <div class="topo">
                                <p class=""> <span>ID: @Model.listaDeUsuarios[i].ID </span> - Nome: @Model.listaDeUsuarios[i].Nome - Email: @Model.listaDeUsuarios[i].Email <p/>
                                <a href="/Admin/DeletarUser?id=@Model.listaDeUsuarios[i].ID">Deletar</a>
                            </div>
                                <p> Data de Nascimento: @Model.listaDeUsuarios[i].DataNascimento.ToShortDateString()</p>
                        </div> 
                    }
                }
                </div>
        </div>
                        



</section>
